{
    "name": "evan/activitypub-php",
    "description": "ActivityPub protocol implementation in PHP",
    "type": "library",
    "require": {
        "php": ">=7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.5",
        "squizlabs/php_codesniffer": "3.*"
    },
    "license": "GPLv3",
    "authors": [
        {
            "name": "Evan Duncan",
            "email": "evan.e.duncan@gmail.com"
        }
    ],
    "minimum-stability": "alpha",
    "scripts": {
        "test": "phpunit tests/",
        "lint": "phpcs --standard=PSR2 src tests"
    },
    "autoload": {
        "psr-4": {
            "ActivityPub\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ActivityPub\\": "tests/"
        }
    }
}
